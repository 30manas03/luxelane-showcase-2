# Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# Application Configuration
VITE_APP_NAME=LuxeLane
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# API Configuration
VITE_API_URL=http://localhost:3000/api
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3

# External Services
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
VITE_SENTRY_DSN=https://your_sentry_dsn_here

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SENTRY=false
VITE_ENABLE_PWA=false
VITE_ENABLE_OFFLINE_MODE=false

# Performance Configuration
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_CODE_SPLITTING=true
VITE_ENABLE_SERVICE_WORKER=false

# Development Tools
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_ENABLE_ERROR_BOUNDARIES=true

# Security Configuration
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true
VITE_ENABLE_XSS_PROTECTION=true

# Internationalization
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,es,fr
VITE_FALLBACK_LOCALE=en

# Image Optimization
VITE_IMAGE_QUALITY=80
VITE_IMAGE_FORMATS=webp,avif,jpg
VITE_ENABLE_IMAGE_LAZY_LOADING=true

# Cache Configuration
VITE_CACHE_DURATION=3600
VITE_ENABLE_SW_CACHE=false
VITE_CACHE_STRATEGY=network-first

# Monitoring and Analytics
VITE_ENABLE_PERFORMANCE_METRICS=true
VITE_ENABLE_USER_BEHAVIOR_TRACKING=false
VITE_ENABLE_ERROR_TRACKING=true

# Development Server
VITE_DEV_SERVER_PORT=5173
VITE_DEV_SERVER_HOST=localhost
VITE_DEV_SERVER_HTTPS=false

# Build Configuration
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=true
VITE_BUILD_TREESHAKE=true
VITE_BUILD_TARGET=esnext

# Testing Configuration
VITE_ENABLE_TESTING=true
VITE_TEST_COVERAGE_THRESHOLD=80
VITE_TEST_TIMEOUT=10000

# Storybook Configuration
VITE_STORYBOOK_PORT=6006
VITE_STORYBOOK_HOST=localhost

# Note: Never commit actual API keys or sensitive information to version control
# Use environment variables and keep .env.local in your .gitignore
